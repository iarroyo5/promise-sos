{
  "compilerOptions": {
    "declaration": true,
    "jsx": "react",
    "lib": ["es7", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "include": [
    "./dev/**/*",
    "./src/**/*"
  ],
  "exclude": [
    "config",
    "coverage",
    "build",
    "node_modules",
    "scripts"
  ]
}
