{
  "name": "promise-sos",
  "version": "0.2.0",
  "description": "Helpers for using promise",
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build:watch": "npm run build -- --watch",
    "build": "tsc --project .",
    "isready": "npm run lint && npm test && npm run build",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "test": "jest",
    "coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls && rm -rf ./coverage",
    "coveralls:tmp": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:iarroyo5/promise-sos.git"
  },
  "keywords": [
    "promise",
    "helpers",
    "typescript"
  ],
  "author": "Inaki Arroyo <dev@inakiarroyo.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "23.3.12",
    "coveralls": "^3.0.2",
    "jest": "23.6.0",
    "ts-jest": "23.10.5",
    "tslint": "5.12.1",
    "typescript": "3.2.2"
  }
}
